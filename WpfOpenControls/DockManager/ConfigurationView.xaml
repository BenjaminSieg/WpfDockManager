        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Title="Theme Editor" Height="1000" Width="1000">
    <Window.Resources>
        <ResourceDictionary>
            <System:Double x:Key="TabItemWidth">110</System:Double>
            <Style x:Key="StyleBrushRectangle" TargetType="Rectangle">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="20"/>

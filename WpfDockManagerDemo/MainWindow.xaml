        <Grid.RowDefinitions>
            <RowDefinition/>
            <!--<RowDefinition Height="Auto"/>
            <RowDefinition/>-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <dockManager:LayoutManager x:Name="_layoutManager" Grid.Row="0" Grid.Column="0" DocumentItems="{Binding Documents}" ToolItems="{Binding Tools}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <dockManager:LayoutManager.Resources>
                <DataTemplate DataType="{x:Type viewModel:DemoOneViewModel}">
                    <view:DemoOneView x:Name="_demoOneView"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModel:DemoTwoViewModel}">
                    <view:DemoTwoView x:Name="_demoTwoView"/>
                </DataTemplate>
            </dockManager:LayoutManager.Resources>
            <dockManager:LayoutManager.CloseControlTemplate>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="{TemplateBinding Background}"/>
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </dockManager:LayoutManager.CloseControlTemplate>
        </dockManager:LayoutManager>


        </Setter>
    </Style>
    
    <Style x:Key="PinButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="1,2,0,2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Margin="0">
                        <Ellipse Name="_ellipse" Fill="Transparent" Width="18" Height="18" Stroke="White" StrokeThickness="1"/>
                        <Grid Margin="2,1,0,0">
                            <Line Name="_pin1" X1="8" Y1="-2" X2="8" Y2="4" Stroke="White" StrokeThickness="5" VerticalAlignment="Center"/>
                            <Line Name="_pin2" X1="4" Y1="4" X2="12" Y2="4" Stroke="White" StrokeThickness="1" VerticalAlignment="Center"/>
                            <Line Name="_pin3" X1="8" Y1="6" X2="8" Y2="10" Stroke="White" StrokeThickness="1" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="_ellipse" Property="Fill" Value="Gainsboro" />
                            <Setter TargetName="_ellipse" Property="StrokeThickness" Value="1" />
                            <Setter TargetName="_pin1" Property="Stroke" Value="Black" />
                            <Setter TargetName="_pin2" Property="Stroke" Value="Black" />
                            <Setter TargetName="_pin3" Property="Stroke" Value="Black" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SettingsButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Margin="0,0,0,0">
                        <Ellipse Width="18" Height="18" Stroke="{TemplateBinding Foreground}" StrokeThickness="4" Fill="Transparent" Panel.ZIndex="99"/>
                        <!-- Bottom -->
                        <Rectangle Width="4" Height="4" Fill="{TemplateBinding Foreground}" Panel.ZIndex="99">
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform X="0" Y="+10"/>
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <!-- Top -->
                        <Rectangle Width="4" Height="4" Fill="{TemplateBinding Foreground}" Panel.ZIndex="99">
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform X="0" Y="-10"/>
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <!-- Right -->
                        <Rectangle Width="4" Height="4" Fill="{TemplateBinding Foreground}" Panel.ZIndex="99">
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform X="10" Y="0"/>
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <!-- Left -->
                        <Rectangle Width="4" Height="4" Fill="{TemplateBinding Foreground}" Panel.ZIndex="99">
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform X="-10" Y="0"/>
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <Rectangle Width="4" Height="4" Fill="{TemplateBinding Foreground}" Panel.ZIndex="99">
                            <Rectangle.LayoutTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="45" CenterX="0.5" CenterY="0.5"/>
                                </TransformGroup>
                            </Rectangle.LayoutTransform>
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform X="7" Y="-7"/>
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <Rectangle Width="4" Height="4" Fill="{TemplateBinding Foreground}" Panel.ZIndex="99">
                            <Rectangle.LayoutTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="45" CenterX="0.5" CenterY="0.5"/>
                                </TransformGroup>
                            </Rectangle.LayoutTransform>
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform X="-7" Y="-7"/>
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <Rectangle Width="4" Height="4" Fill="{TemplateBinding Foreground}" Panel.ZIndex="99">
                            <Rectangle.LayoutTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="45" CenterX="0.5" CenterY="0.5"/>
                                </TransformGroup>
                            </Rectangle.LayoutTransform>
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform X="7" Y="7"/>
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <Rectangle Width="4" Height="4" Fill="{TemplateBinding Foreground}" Panel.ZIndex="99">
                            <Rectangle.LayoutTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="45" CenterX="0.5" CenterY="0.5"/>
                                </TransformGroup>
                            </Rectangle.LayoutTransform>
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform X="-7" Y="7"/>
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <Grid.LayoutTransform>
                            <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                        </Grid.LayoutTransform>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
